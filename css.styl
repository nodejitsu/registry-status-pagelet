$base = #444
$blue = #2980b9
$highlight = #f4f4f4

.charts
  border-left: 5px solid $highlight
  border-top-right-radius: 10px
  border-bottom-right-radius: 10px

  .axis
    line
    path
      fill: transparent
      stroke: $base
      stroke-width: 1.25

  text
    font-size: 14px

  .value
    font-size: 40px
    font-weight: bold
    fill: $blue

  .title
    font-size: 14px
    font-weight: bold
    text-transform: uppercase
    fill: #999

.row
  color: #444
  font-family: "proxima-nova-1", "proxima-nova-2", sans-serif;
  position: relative

.countries
  fill: $blue

  for i in 1..10
    .hecta-{i}
      fill: lighten(@fill, i * 5%)

.registries
  path
    fill: $base
    stroke: $highlight
    stroke-width: 2
    cursor: pointer

.line
  fill: transparent
  stroke: $base
  stroke-width: 2

.tooltip
  absolute: top 0 left 0
  background-color: rgba(255, 255, 255, 0.98)
  border: 1px solid #444
  border-radius: 5px
  min-height: 50px
  min-width: 200px
  opacity: 0
  z-index: 1